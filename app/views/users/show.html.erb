<div class="body">
	<div class="container">
		<div class="raw">
			<div class="col-md-3 col-md-offset-1 well">
				follow
				<% @user ||= current_user %>
				<div class="stats">
					<a href="<%= following_user_path(@user) %>">
						<strong id="following" class="stat">
							<%= @user.following.count %>
						</strong>
						following
					</a>
					<a href="<%= followers_user_path(@user) %>">
						<strong id="followers" class="stat">
							<%= @user.followers.count %>
						</strong>
						followers
					</a>
				</div>
				<% if current_user != @user %>
				<div id="follow_form">
					<% unless current_user.following?(@user) %>
					<%= form_for(current_user.active_relationships.build) do |f| %>
					<div><%= hidden_field_tag :followed_id, @user.id %></div>
					<%= f.submit "Follow", class: "btn btn-primary" %>
					<% end %>
					<% else %>
					<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
					html: { method: :delete }) do |f| %>
					<%= f.submit "Unfollow", class: "btn" %>
					<% end %>
					<% end %>
				</div>
				<% end %>
			</div>
			<div class="col-md-4 well">
				tree
				<%= @user.posts.count %> 件の投稿
				<% @posts.each do |post| %>
				<tr>
					<li><%= link_to post.post_title, post_path %></li>
				</tr>
				<% end %>
			</div>
			<div class="col-md-3 well">
				current_user
				<div>
					<%= @user.name %> <%= link_to "edit",edit_user_path(current_user.id) %>
					<%= attachment_image_tag @user, :user_image, :fill, 245, 245, format: 'jpeg' %>
					<%= @user.profile %>
				</div>
				favorites
				<% @favorites.each do |favorite| %>
				<div>
					<tr>
						<li><%= link_to favorite.post.post_title,post_path(favorite.post.id) %></li>
					</tr>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
