<div class="container-fluid bg-green">
	<div class="raw">
		<div class="col-md-3 col-md-offset-1 well">
			<% @user ||= current_user %>
			<!--follow status -->
			<div>
				<h4><%= @user.following.count %> following</h4><br>
				<% @following.each do |user| %>
				<div>
					<%= link_to user_path(user.id) do %>
					<%= attachment_image_tag user, :user_image, :fill, 40, 40 %>
					<% end %> 
					<%= link_to user.name, user_path(user.id) %>
				</div>
				<% end %>
				<h4><%= @user.followers.count %> followers</h4><br>
				<% @followers.each do |user| %>
				<div>
					<%= link_to user_path(user.id) do %>
					<%= attachment_image_tag user, :user_image, :fill, 40, 40 %>
					<% end %>
					<%= link_to user.name, user_path(user.id) %>
				</div>
				<% end %>
			</div>
			<!-- /follow status -->
			<!--follow_unfollow botton-->
			<% if current_user != @user %>
			<div id="follow_form">
				<% unless current_user.following?(@user) %>,fallback:"no_image.jpg"
				<%= form_for(current_user.active_relationships.build) do |f| %>
				<div><%= hidden_field_tag :followed_id, @user.id %></div>
				<%= f.submit "Follow", class: "btn btn-primary" %>
				<% end %>
				<% else %>
				<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
				html: { method: :delete }) do |f| %>
				<%= f.submit "Unfollow", class: "btn" %>
				<% end %>
				<% end %>
			</div>
			<% end %>
			<!--/follow_unfollow botton-->
		</div>
		<div class="col-md-4 well">
			<h4><%= @user.posts.count %> 件の投稿</h4>
			<% @posts.each do |post| %>
			<tr>
				<li><%= link_to post.post_title, post_path(post.id) %></li>
			</tr>
			<% end %>
		</div>
		<div class="col-md-3 well">
			<%= attachment_image_tag @user, :user_image, :fill, 320, 320, class: "img-responsive center-block" %>
			<h4><%= @user.name %></h4>
			<p><%= @user.profile %></p>
			<p><%= @user.created_at.strftime('%Y/%m/%d %H:%M') %> (<%= time_ago_in_words(@user.created_at) %> ago)</p>
			<p class="text-right"><%= link_to "edit",edit_user_path(current_user.id) %></p>
			<h4>favorites</h4>
			<% @favorites.each do |favorite| %>
			<tr>
				<li><%= link_to favorite.post.post_title,post_path(favorite.post.id) %></li>
			</tr>
		</div>
		<% end %>
	</div>
</div>
</div>
</div>
