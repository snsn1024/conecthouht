<div class="container-fluid"> 
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h5 class="panel-title">ユーザー情報編集</h5>
				</div>
				<div class="panel-body">
					<%= form_for(@user) do |f| %>
					<div class="field">
						<%= f.text_field :name, placeholder:"名前", size: "35x1" %>
					</div>
					<div class="field">
						<%= f.text_area :profile, placeholder:"自己紹介", size: "70x4" %>
					</div>
					<%= f.attachment_field :user_image,class: "center-block" %>
					<%= f.submit "保存",class: "btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>