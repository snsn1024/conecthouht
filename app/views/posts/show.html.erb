<div class="body">
	<div class="container">
		<div class="raw">
			<div class="col-md-3 col-md-offset-1 well">
				other_user
			</div>
			<div class="col-md-4 well">
				tree
			</div>
			<div class="col-md-3 well">
				current_user
				<div>
					<p><%= @post.post_title %></p>
					<p><%= @post.post_text %></p>
					<%= attachment_image_tag @post.user, :user_image, :fill, 50, 50, format: 'jpeg' %>
					<%= @post.user.name %> <%= @post.created_at.strftime('%Y/%m/%d') %>
				</div>
			</div>
			<div class="col-md-10 col-md-offset-1 well">
				comment
				<% @post.comments.each do |comment| %>
				<p><%= comment.user.name %> <%= comment.created_at.strftime('%Y/%m/%d') %></p>
				<p><%= comment.comment_text %></p>
				<% end %>

				<%= form_for [@post, @comment] do |f| %>
				<%= f.text_area :comment_text, rows:'1', class: "form-control",placeholder: "コメントをここに" %>
				<%= f.submit "submit" %>
				<% end %>
			</div>
		</div>
	</div>
</div>


