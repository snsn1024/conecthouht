<div class="container-fluid bg-green"> 
	<div class="raw">
		<!--modal-->
		<%= render 'posts/replymodal', post: @post, reply: @reply %>
		<!--/modal-->
		<% @replies.each do |reply| %>
		<% if @post.user != reply.user %>
		<!--other_user_reply-->
		<div class="col-md-10 col-md-offset-1" id="contentsbox">
			<div class="col-md-3 col-md-offset-1 well">
				<div class="contents">
					<p><%= reply.reply_title %></p>
					<%= attachment_image_tag reply, :reply_image, :fill, 250, 250 %>
					<p class="text"><%= reply.reply_text %></p>
					<%= link_to user_path(reply.user.id) do %>
					<%= attachment_image_tag reply.user, :user_image, :fill, 50, 50 %>
					<% end %>
					<%= link_to reply.user.name,user_path(reply.user.id) %>
					<p class="text-right"><%= reply.created_at.strftime('%Y/%m/%d %H:%M') %> ( <%= time_ago_in_words(reply.created_at) %> ago )</p>
				</div>
			</div>
			<img class="img-rounded rewater" src="/assets/topimage1.jpg">
		</div>
		<!--/other_user_reply-->
		<% else %>
		<!--@post.user_reply-->
		<div class="col-md-10 col-md-offset-1" id="contentsbox">
			<img class="img-rounded water" src="/assets/topimage1.jpg">
			<div class="col-md-3 col-md-offset-9 well">
				<div class="contents">
					<p><%= reply.reply_title %></p>
					<%= attachment_image_tag reply, :reply_image, :fill, 250, 250 %>
					<p><%= reply.reply_text %></p>
					<%= link_to user_path(reply.user.id) do %>
					<%= attachment_image_tag reply.user, :user_image, :fill, 50, 50 %>
					<% end %>
					<%= link_to reply.user.name, user_path(reply.user.id)%>
					<p class="text-right"><%= reply.created_at.strftime('%Y/%m/%d %H:%M') %> ( <%= time_ago_in_words(reply.created_at) %> ago )</p>
				</div>
			</div>
		</div>
		<!--/@post.user_reply-->
		<% end %>
		<% end %>
		<!--first_post-->
		<div class="col-md-10 col-md-offset-1" id="contentsbox">
			<img class="img-rounded water" src="/assets/topimage1.jpg">
			<div class="col-md-3 col-md-offset-9 well">
				<div class="contents">
					<p><%= @post.post_title %></p>
					<% @post.tag_list.each do |tag| %>
					<span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
					<% end %>
					<p><%= link_to "edit",edit_post_path(@post.id) %></p>
					<p><%= link_to "delete", post_path(@post.id), method: :delete %></p>
					<%= attachment_image_tag @post, :post_image, :fill, 250, 250 %>
					<p><%= @post.post_text %></p>
					<%= link_to user_path(@post.user.id) do %>
					<%= attachment_image_tag @post.user, :user_image, :fill, 50, 50 %>
					<% end %>
					<%= link_to @post.user.name, user_path(@post.user.id)%>
					<p class="text-right"><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %> ( <%= time_ago_in_words(@post.created_at) %> ago )</p>
				</div>
			</div>
		</div>
		<!--/first_post-->
	</div>
</div>
<div class="container-fluid soil">
	<div class="raw">
		<div class="col-md-10 col-md-offset-1">
			<!--fav-->
			<% if @post.favorited_by?(current_user) %>
			<%= link_to post_favorites_path(@post), method: :delete do %>
			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
			<%= @post.favorites.count %> いいね
			<% end %>
			<% else %>
			<%= link_to post_favorites_path(@post), method: :post do %>
			<i class="fa fa-heart-o" aria-hidden="true"></i>
			<%= @post.favorites.count %> いいね
			<% end %>
			<% end %>
			<!--/fav-->
			<!--comment-->
			<% @post.comments.each do |comment| %>
			<div class="well">
				<%= link_to user_path(comment.user.id) do %>
				<%= attachment_image_tag comment.user, :user_image, :fill, 40, 40 %>
				<% end %>
				<%= comment.comment_text %>
				<p class="text-right">
					by <%= link_to comment.user.name,user_path(comment.user.id) %>
					<%= comment.created_at.strftime('%Y/%m/%d %H:%M') %> ( <%= time_ago_in_words(comment.created_at) %> ago )
				</p>
			</div>
			<% end %>
			<%= form_for [@post, @comment] do |f| %>
			<%= f.text_area :comment_text, rows:'1', class: "form-control",placeholder: "コメントをここに" %>
			<%= f.submit "submit" %>
			<% end %>
			<!--/comment-->
		</div>
	</div>
</div>
<style>
	#modal {
		margin-bottom: 20px;
	}
	#contentsbox {
		position: relative
	}
	.rewater {
		height: 60px;
		width: 60px;
		transform: scale(-1, 1);
		position: absolute;
		bottom: 20px;
		margin-left: 20px;
	}
	.water {
		height: 60px;
		width: 60px;
		position: absolute;
		bottom: 20px;
		margin-left: 780px;
	}
</style>