<div class="container text-center" id="modal">
	<button type="button" class="btn btn-default mt-5" data-toggle="modal" data-target="#post">投稿する</button>
	<div class="modal fade" id="post" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<%= form_for(post) do |f| %>
				<div class="modal-body">
					<p>title</p>
					<%= f.text_field :post_title %><br>
					<%= f.label :tag_list, 'tag' %>
					<%= text_field_tag 'post[tag_list]', post.tag_list, :class => "form-control" %>
					<p>text</p>
					<%= f.text_area :post_text %>
					<p>image</p>
					<%= f.attachment_field :post_image %>
					<p>sound</p>
					<%= f.attachment_field :post_sound %>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
					<%= f.submit "投稿する", class: "btn btn-primary" %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
